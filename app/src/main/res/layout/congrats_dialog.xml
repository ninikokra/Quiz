<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.space.quiz.presentation.views.RectangleView
        android:id="@+id/dialogRectangleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_199dp"
        android:layout_marginHorizontal="@dimen/dimen_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rectangleBackgroundColor="@color/yellow_primary" />

    <ImageView
        android:id="@+id/congratsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_39dp"
        android:src="@drawable/ic_congrats"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/congratsTextView"
        style="@style/largeMyriadGeo_white_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dimen_5dp"
        android:text="@string/congratulations_text"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toBottomOf="@+id/congratsImageView" />

    <TextView
        android:id="@+id/earnedPointsTextView"
        style="@style/mediumMyriadGeo_lBlue_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="@string/points_text"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toBottomOf="@+id/congratsTextView" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:background="@color/neutral_04_white"
        app:layout_constraintBottom_toTopOf="@+id/closeDialogButton"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView" />

    <TextView
        android:id="@+id/closeDialogButton"
        style="@style/mediumMyriadGeo_white_Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:text="@string/text_close"
        app:layout_constraintBottom_toBottomOf="@+id/dialogRectangleView"
        app:layout_constraintEnd_toEndOf="@+id/viewLine"
        app:layout_constraintStart_toStartOf="@+id/viewLine" />
</androidx.constraintlayout.widget.ConstraintLayout>