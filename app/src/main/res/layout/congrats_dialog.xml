<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.space.quiz.presentation.views.RectangleView
        android:id="@+id/dialogRectangleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_199dp"
        android:layout_marginHorizontal="@dimen/dimen_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rectangleBackgroundColor="@color/yellow_primary" />

    <TextView
        android:id="@+id/congratsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:font="@font/myriad_geo"
        android:layout_marginTop="@dimen/dimen_34dp"
        android:drawablePadding="@dimen/dimen_5dp"
        android:text="@string/congratulations_text"
        android:textColor="@color/neutral_04_white"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toTopOf="@+id/dialogRectangleView"
        app:drawableTopCompat="@drawable/ic_happy" />

    <TextView
        android:id="@+id/earnedPointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text="@string/points_text"
        android:font="@font/myriad_geo"
        android:textColor="@color/blue_secondary_default"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toBottomOf="@+id/congratsTextView" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:background="@color/neutral_04_white"
        app:layout_constraintEnd_toEndOf="@+id/dialogRectangleView"
        app:layout_constraintStart_toStartOf="@+id/dialogRectangleView"
        app:layout_constraintTop_toBottomOf="@+id/earnedPointsTextView" />

    <TextView
        android:id="@+id/closeDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:font="@font/myriad_geo"
        android:text="@string/text_close"
        android:textColor="@color/neutral_04_white"
        android:textSize="@dimen/dimen_14sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="@+id/viewLine"
        app:layout_constraintStart_toStartOf="@+id/viewLine"
        app:layout_constraintTop_toBottomOf="@+id/viewLine" />
</androidx.constraintlayout.widget.ConstraintLayout>