<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.space.quiz.presentation.views.RectangleView
        android:id="@+id/itemsRectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rectangleBackgroundColor="@color/neutral_03_light_grey" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_subject"
        android:layout_marginEnd="@dimen/dimen_30dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemsRectangle"
        app:layout_constraintEnd_toEndOf="@+id/itemsRectangle"
        app:layout_constraintTop_toTopOf="@+id/itemsRectangle" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:src="@drawable/geography"
        app:layout_constraintBottom_toBottomOf="@+id/itemsRectangle"
        app:layout_constraintStart_toStartOf="@+id/itemsRectangle"
        app:layout_constraintTop_toTopOf="@+id/itemsRectangle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18sp"
        android:text="გეოგრაფია"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:textColor="@color/neutral_01_dark_grey"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/itemsRectangle"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/itemsRectangle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="აღწერა"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/hint_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/itemsRectangle"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>