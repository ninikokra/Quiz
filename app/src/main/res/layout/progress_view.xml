<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/answersProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:indicatorColor="@color/blue_secondary_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/neutral_04_light_grey"
        app:trackCornerRadius="@dimen/dimen_3dp"
        app:trackThickness="10dp" />

      <TextView
          android:id="@+id/progressBarPoints"
          style="@style/mediumMyriadGeo_darkGrey_bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/dimen_5dp"
          app:layout_constraintBottom_toTopOf="@+id/answersProgress"
          app:layout_constraintStart_toStartOf="@+id/answersProgress"
          tools:text="1/10" />

    <TextView
        android:id="@+id/currentAnswersPoint"
        style="@style/mediumMyriadGeo_yellow_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:drawablePadding="@dimen/dimen_5dp"
        app:drawableRightCompat="@drawable/ic_yellow_star"
        app:layout_constraintBottom_toTopOf="@+id/answersProgress"
        app:layout_constraintEnd_toEndOf="@+id/answersProgress"
        android:text="@string/current_point_text"
        tools:text="მიმდინარე ქულა - 1" />

</androidx.constraintlayout.widget.ConstraintLayout>