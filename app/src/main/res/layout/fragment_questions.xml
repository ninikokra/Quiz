<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui_questions.ui.QuestionsFragment">

    <com.space.quiz.presentation.views.HeaderView
        android:id="@+id/customTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actions="cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.space.quiz.presentation.views.ProgressView
            android:id="@+id/progressBarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customTitleView"
            />

    <com.space.quiz.presentation.views.RectangleView
        android:id="@+id/testsTopRectangle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarView"
        app:rectangleBackgroundColor="@color/blue_secondary_lightest" />

    <TextView
        android:id="@+id/testsQuestionTextView"
        style="@style/mediumMyriadGeo_darkGrey_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dimen_300dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/testsTopRectangle"
        app:layout_constraintEnd_toEndOf="@+id/testsTopRectangle"
        app:layout_constraintStart_toStartOf="@+id/testsTopRectangle"
        app:layout_constraintTop_toTopOf="@+id/testsTopRectangle"
        tools:text="რომელია ყველაზე პოპულარული პროგრამირების ენა?" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testsTopRectangle"
        tools:itemCount="4"
        tools:listitem="@layout/answer_customview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextQuestionButton"
        style="@style/mediumMyriadGeo_white_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:letterSpacing="0"
        android:paddingHorizontal="@dimen/dimen_24dp"
        android:paddingVertical="@dimen/dimen_14dp"
        android:text="@string/next_button_text"
        android:textAllCaps="false"
        app:backgroundTint="@color/yellow_primary"
        app:cornerRadius="@dimen/dimen_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answersRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>